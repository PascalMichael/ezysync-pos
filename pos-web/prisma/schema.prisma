
generator client { provider = "prisma-client-js" }
datasource db { provider = "postgresql" url = env("DATABASE_URL") }
// For Electron offline, set provider to sqlite and use SQLITE_URL in .env
model Staff { id String @id @default(cuid()) name String pin String @unique role String }
model MenuItem { id String @id @default(cuid()) name String priceCents Int }
model Order { id String @id @default(cuid()) staffId String totalCents Int createdAt DateTime @default(now()) }
